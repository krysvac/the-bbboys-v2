{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "google",
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-unused-vars": "off",
        "new-cap": "off",
        "require-jsdoc": "off",
        "max-len": "off",
        "no-magic-numbers": "error",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ]
    },
    "overrides": [
        {
            "files": ["**/**.spec.ts"],
            "rules": {
                "no-undef": "off"
            }
        }
    ]
}
